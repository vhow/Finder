<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/file">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_show_hidden_file"
            android:summaryOff="@string/do_not_display_hidden_file"
            android:summaryOn="@string/show_hidden_file"
            android:title="@string/hidden_file" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="@string/pref_key_version"
            android:persistent="true"
            android:title="@string/version" />
    </PreferenceCategory>
</PreferenceScreen>